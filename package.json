{
  "name": "eslint-plugin-lucky-monkey",
  "version": "1.1.0",
  "description": "common eslint plugin",
  "keywords": [
    "eslint",
    "monkey",
    "plugin"
  ],
  "homepage": "https://borenxue.github.io/eslint-plugin-lucky-monkey/",
  "bugs": {
    "url": "https://github.com/borenXue/eslint-plugin-lucky-monkey/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/borenXue/eslint-plugin-lucky-monkey.git"
  },
  "license": "MIT",
  "author": "boren.xue",
  "main": "lib/index.js",
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "debug": "babel src --out-dir lib && node tests/_index.js",
    "docs": "cp README.md docs && ./node_modules/gh-pages/bin/gh-pages.js -d docs --silent --repo https://${GITHUB_TOKEN}@github.com/borenXue/eslint-plugin-lucky-monkey.git",
    "lint": "npm-run-all --parallel lint:*",
    "lint:editconfig": "eclint check --block_comment_start '/**' --block_comment_end '*/'",
    "lint:eslint": "eslint --ext .js src --format html -o ./docs/eslint.html",
    "semantic-release": "semantic-release",
    "test": "npm run lint && babel src --out-dir lib && mocha tests --recursive --compilers js:babel-core/register --reporter mochawesome --reporter-options reportDir=./docs/mocha,reportName=eslint-plugin-lucky-monkey,reportTitle=eslint-plugin-lucky-monkey,inlineAssets=true"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "url-parse": "^1.4.4",
    "url-regex": "^4.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@semantic-release/exec": "^3.3.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "conventional-changelog-cli": "^2.0.11",
    "cz-conventional-changelog": "^2.1.0",
    "eclint": "^2.8.1",
    "eslint": "^5.11.1",
    "gh-pages": "^2.0.1",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "mochawesome": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "requireindex": "^1.2.0",
    "semantic-release": "^15.13.2",
    "sort-package-json": "^1.17.1",
    "vue-eslint-parser": "^5.0.0"
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json",
      "git add"
    ],
    "src/**/*.{js,vue}": [
      "eslint --fix --ext .js,.vue src",
      "git add",
      "npm run lint:eslint"
    ],
    "**/*": [
      "eclint fix --block_comment_start '/**' --block_comment_end '*/'",
      "git add",
      "eclint check --block_comment_start '/**' --block_comment_end '*/'"
    ]
  },
  "release": {
    "branch": "master",
    "tagFormat": "v${version}",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          },
          "releaseRules": [
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "refactor",
              "scope": "src",
              "release": "major"
            },
            {
              "type": "perf",
              "release": "minor"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "build",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "scope",
              "subject"
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "prepare": "pwd && ls && git status && git diff",
          "publishCmd": "npm run docs"
        }
      ]
    ]
  }
}
