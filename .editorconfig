# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_size = 4

[{.babelrc,LICENSE,*.md,.gitignore}]
insert_final_newline = false

[.eslint*]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
